{% extends 'base.html.twig' %}

{% block title %}Listado Tareas{% endblock %}

{% block body %}

    <h2 class="mt-4 text-center">Tareas por hacer</h2>
    {% include 'comunes/_mensajes.html.twig' %}

    <table class="table  table-hover table-striped">
        
        <thead class="table-dark">
            <tr>
                {# <th scope="col">#</th> #}
                <th scope="col" >Descripci√≥n</th>
                <th scope="col" class="text-center">Acciones</th>
            </tr>
        </thead>

        <tbody>
        {% for index, tarea in tareas %}
            <tr>
                {# <th scope="row">{{index+1}}</th> #}
                <td>{{tarea.descripcion}}</td>
                <td class="text-center">
                    <a class="text-dark" href="{{ path('app_editar_tarea_servicio',{'id':tarea.id}) }}"><i class="bi-pencil"></i></a>
                    <a class="text-dark" href="{{ path('app_eliminar_tarea_servicio',{'id':tarea.id}) }}"><i class="mx-1 bi bi-x-circle-fill"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <th colspan="3" scope="row" class="text-center">No se han encontrado resultados</th>
            </tr>
        {% endfor %}
        </tbody>

    </table>
{% endblock %}
